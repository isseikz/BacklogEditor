<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/project_preference_header">

        <EditTextPreference
            app:key="personal_access_token"
            app:title="@string/token_title"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="webpage_create_token"
            app:title="If you don't have GitHub token, create it from here.">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/settings/tokens/new?description=GitHub%20GraphQL%20API%20Token&amp;scopes=user,repo,admin:org,project,project:read" />
        </Preference>

        <ListPreference
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="project"
            app:title="@string/project_title"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="@string/sync_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/sync_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:summaryOff="@string/attachment_summary_off"
            app:summaryOn="@string/attachment_summary_on"
            app:title="@string/attachment_title" />

    </PreferenceCategory>

</PreferenceScreen>