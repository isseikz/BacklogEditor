<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="GitHub Projects - "
            android:textColor="@color/colorText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/backlog_widget_header_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Header Project Title"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAddItem"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@color/colorAccent"
            android:text="Add"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_add"
            app:strokeColor="@color/colorText" />

        <Button
            android:id="@+id/buttonVoiceInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@color/colorAccent"
            android:text="Voice"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:icon="@drawable/baseline_mic_24"
            app:strokeColor="@color/colorBackground" />
    </LinearLayout>

    <!--  Button to start voice recognition alternative to the keyboard input  -->

    <ListView
        android:id="@+id/listViewProjects"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No items to display"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>
